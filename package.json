{
  "name": "@dimensionalpocket/timer",
  "version": "0.1.0",
  "description": "A timeout/interval Javascript wrapper.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test c8 mocha",
    "lint": "standardx --fix --verbose",
    "release": "release-it --config ./node_modules/@dimensionalpocket/release/config/default.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimensionalpocket/timer-js.git"
  },
  "author": "dimensionalpocket.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimensionalpocket/timer-js/issues"
  },
  "homepage": "https://github.com/dimensionalpocket/timer-js#readme",
  "dependencies": {
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@dimensionalpocket/development": "github:dimensionalpocket/development-js#0.5.3",
    "@dimensionalpocket/release": "github:dimensionalpocket/release-js#0.2.4"
  },
  "babel": {
    "extends": "./node_modules/@dimensionalpocket/development/babel"
  },
  "eslintConfig": {
    "extends": "./node_modules/@dimensionalpocket/development/eslint"
  },
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "extends": "./node_modules/@dimensionalpocket/development/c8/default.json",
    "include": [
      "index.js",
      "src"
    ]
  },
  "engines": {
    "node": ">= 14.17.1"
  }
}
